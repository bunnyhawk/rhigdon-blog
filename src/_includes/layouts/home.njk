{% extends 'layouts/base.njk' %}

{# Intro content #}
{% set introHeading = title %}
{% set introSummary %}
  {{ content | safe }}
{% endset %}

{# Post list content #}
{% set postListHeading = postsHeading %}
{% set postListItems = collections.posts %}

{% set backEndItems = collections["back-end"] %}
{% set frontEndItems = collections["front-end"] %}
{% set softSkillItems = collections["soft-skills"] %}

{# Archive link #}
{% if postListItems.length < collections.posts.length %} 
  {% set paginationNextText = archiveButtonText %}
  {% set paginationNextUrl = '/archive' %}
{% endif %}

{% block content %}
  <main id="main-content" tabindex="-1">
    {% include "partials/components/intro.njk" %}
    {% include "partials/components/post-sections.njk" %}
    {% include "partials/components/pagination.njk" %}
  </main>
{% endblock %}
